# https://www.chezmoi.io/reference/special-files-and-directories/chezmoiignore/

README.md

{{- $isLinux   := eq .chezmoi.os "linux" }}
{{- $isWindows := eq .chezmoi.os "windows" }}
{{- $isDarwin  := eq .chezmoi.os "darwin" }}
{{- $isFedora  := and $isLinux (contains "fedora" .chezmoi.osRelease.id) }}
{{- $isGnome   := or (contains "GNOME" (env "XDG_CURRENT_DESKTOP")) (env "GNOME_DESKTOP_SESSION_ID") }}

{{- if $isWindows }}
.config/kitty/
.local/share/fonts/
Library/
{{- end }}

{{- if $isDarwin }}
.local/share/fonts/
AppData/
{{- end }}

{{- if not $isLinux }}
.config/mimeapps.list
.local/bin/xdg-open
.local/share/firefoxpwa/
.local/share/icons/
.etc/bluetooth/
.etc/libinput/
.etc/modprobe.d/
.etc/rc.local
{{- end }}

{{- if not $isFedora }}
.etc/dnf/
.etc/yum.repos.d/
{{- end }}

{{- if not $isGnome }}
.config/dconf/
.config/gtk-3.0/
.local/share/backgrounds/
.local/share/gnome-background-properties/
.mozilla/chrome/
Templates/
{{- end }}
