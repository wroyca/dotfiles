# User specific environment and startup programs.
#
set -gx STARSHIP_CONFIG $HOME/.config/starship/starship.toml

# GCM stopped honoring `credentialStore` from the git config.
#
# Rather than trying to debug why, we force the setting via the environment,
# which is the only thing GCM seems to reliably listen to.
#
set -gx GCM_CREDENTIAL_STORE cache

# Silence wine and dxvk output.
#
set -gx WINEDEBUG -all
set -gx DXVK_LOG_LEVEL none

# Toggle wine debug output between silent and verbose.
#
function toggle_wine_debug
  if test "$WINEDEBUG" = "-all"
    set -gx WINEDEBUG ""
    echo "Wine debug: enabled"
  else
    set -gx WINEDEBUG -all
    echo "Wine debug: disabled"
  end
end

# User specific aliases.
#
source ~/.config/fish/alias.fish

# Minimal cross-shell prompt. https://starship.rs/
#
starship init fish | source
