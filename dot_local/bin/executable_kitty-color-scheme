#!/usr/bin/env bash

if ! command -v kitty > /dev/null 2>&1; then
  exit 1
fi

mode=`gsettings get org.gnome.desktop.interface color-scheme`

d="Neovim-Dark"
l="Neovim-Light"

case $mode in
  *dark* )
    kitty +kitten themes --cache-age=14 --reload-in=all $d 2>/dev/null
    ;;
  *default* | *light* )
    kitty +kitten themes --cache-age=14 --reload-in=all $l 2>/dev/null
    ;;
esac
