#!/usr/bin/env bash

CONFIG_FILE_PATH="$XDG_CONFIG_HOME"/clang-format/clang-format

style_arg_set()
{
  for arg in "$@"
  do
    case "$arg" in
      -style*|--style*)
        return 0
        ;;
      --)
        return 1
    esac
  done
  return 1
}

if style_arg_set "$@"
then
  /usr/bin/clang-format "$@"
else
  /usr/bin/clang-format --style=file:"$CONFIG_FILE_PATH" "$@"
fi
